{
  "name": "easy-node",
  "version": "0.0.1",
  "author": "liuyuan",
  "scripts": {
    "start": "node ./bin/initLogrotate.js && pm2 start pm2.config.js",
    "start:test": "pm2 start pm2.config.js --env test",
    "start:prd": "pm2 start pm2.config.js --env prd",
    "start:dr": "pm2 start pm2.config.js --env dr",
    "stop": "pm2 kill",
    "pm2:update": "pm2 update",
    "logs": "pm2 logs",
    "ls": "pm2 list",
    "i:log": "pm2 install pm2-logrotate",
    "uni:log": "pm2 uninstall pm2-logrotate",
    "debug": "npm run clean && node bin/debug",
    "build": "npm test && npm run clean && npm run compile",
    "compile": "babel src/ --out-dir app/ --retain-lines --source-maps",
    "clean": "rm -rf app/",
    "test": "mocha -u bdd --compilers js:babel-core/register"
  },
  "engines": {
    "node": ">= 4"
  },
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-plugin-add-module-exports": "^0.1.4",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "co": "^4.6.0",
    "debug": "^2.2.0",
    "ejs": "^2.4.1",
    "form-data": "^2.3.1",
    "https": "^1.0.0",
    "koa": "^2.0.0",
    "koa-body": "^4.0.4",
    "koa-convert": "^1.2.0",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^3.0.1",
    "koa-router": "^7.0.0",
    "koa-static-plus": "^0.1.1",
    "koa-views": "^5.0.1",
    "koa2-cors": "^2.0.3",
    "lodash": "^4.11.1",
    "node-fetch": "^1.7.3",
    "pm2": "^3.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chalk": "^2.4.1",
    "chokidar": "^1.5.1",
    "colors": "^1.1.2",
    "eslint": "^2.11.1",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-promise": "^1.3.1",
    "eslint-plugin-standard": "^1.3.2",
    "mocha": "^2.4.5",
    "should": "^8.3.0",
    "supertest": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guibwl/easy-node.git"
  },
  "license": "MIT"
}
